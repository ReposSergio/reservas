# Usa una imagen base de Node.js para la compilaci贸n
FROM node:18 AS build
WORKDIR /app

# Copia los archivos del proyecto
COPY package.json package-lock.json ./
RUN npm install

# Copia el resto del c贸digo y construye la aplicaci贸n
COPY . ./
RUN npm run build

# Usa una imagen ligera de Node.js para el runtime
FROM node:18-alpine
WORKDIR /app
COPY --from=build /app ./

# Exponemos el puerto de Next.js
EXPOSE 3000

# Comando de inicio de la aplicaci贸n
CMD ["npm", "start"]
